<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id= "@+id/swipeContainer"
    tools:context=".GithubRepositories">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width = "match_parent"
        android:layout_height= "match_parent"
        tools:showIn="@layout/activity_github_repositories"
        android:backgroundTint="#f2f2f2"
        tools:context=".controller.GithubRepositories"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/disconnected"
        android:text="No internet connection. Please make sure you device is connected to the internet"
        android:textStyle="bold"
        android:textSize="30sp"
        />




</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>